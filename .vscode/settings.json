{
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "filename-lint.enabled": true,
    "filename-lint.excludePatterns": [
        "**/.git/**",
        "**/.idea/**",
        "**/node_modules/**",
        "**/bucket/*.json",
        "**/deprecated/*.json",
        "**/.github/ISSUE_TEMPLATE/"
    ],
    "files.associations": {
        "*.json": "json"
    },
    "json.schemas": [
        {
            "fileMatch": [
                "bucket/**/*.json",
                "deprecated/*.json"
            ],
            "url": "https://raw.githubusercontent.com/abgox/schema/main/Scoop/zh-CN/manifest-min.json"
        }
    ]
}
